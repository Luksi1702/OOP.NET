<Window x:Class="WPF_LukaMarkota.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_LukaMarkota" 
        mc:Ignorable="d"
            ResizeMode="NoResize"
    WindowStyle="SingleBorderWindow"
    WindowStartupLocation="CenterScreen"
    Width="1280"
    Height="720"
    Title="Match Viewer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <!-- Header -->
            <RowDefinition Height="3*"/>
            <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <local:MatchHeader x:Name="matchHeader" Grid.Row="0"/>


        <!-- Main Content Section with 3 Columns -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <local:HomeTeamLineup x:Name="homeTeamLineupControl" Grid.Column="0"/>
            <local:FieldLineup x:Name="fieldLineupControl" Grid.Column="1"/>
            <local:AwayTeamLineup x:Name="awayTeamLineupControl" Grid.Column="2"/>


        </Grid>
    </Grid>
</Window>
