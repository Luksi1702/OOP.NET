<UserControl x:Class="WPF_LukaMarkota.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="50" MinHeight="50">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="4" Background="White">
        <Grid>
            <!-- Background Image -->
            <Image x:Name="imgPlayer"
                   Stretch="Uniform"
                   Opacity="0.7"
                   Panel.ZIndex="0"/>

            <!-- Overlay Text -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1">
                <TextBlock x:Name="txtName"
                           FontSize="12"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Foreground="Black"
                           FontWeight="DemiBold"
                           MaxWidth="80"/>
                <TextBlock x:Name="txtCaptain"
                           FontSize="12"
                           TextAlignment="Center"
                           FontWeight="DemiBold"
                           Foreground="DarkRed"/>
            </StackPanel>

            <!-- Absolute-positioned Number -->
            <Canvas Panel.ZIndex="2">
                <TextBlock x:Name="txtNumber"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="Black"
                           Background="White"
                           Padding="2"
                           Canvas.Left="-10"
                           Canvas.Bottom="-10"/>
            </Canvas>
        </Grid>
    </Border>
</UserControl>
