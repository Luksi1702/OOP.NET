<Window x:Class="WPF_LukaMarkota.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Potvrda" Height="150" Width="300"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Želite li stvarno zatvoriti aplikaciju?" TextWrapping="Wrap" Margin="0,0,0,10" FontWeight="Bold" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Potvrdi" Width="80" Margin="5" Click="Confirm_Click"/>
                <Button Content="Odustani" Width="80" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
